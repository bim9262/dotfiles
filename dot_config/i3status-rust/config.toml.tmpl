[theme]
theme = "solarized-dark"

[theme.overrides]
separator = "<span size='12pt'>î‚²</span>"
good_bg = "#0dbc79"
alternating_tint_bg = "#181818"
alternating_tint_fg = "#181818"

[icons]
icons = "material-nf"

[[block]]
block = "music"
format = " $icon {{"{{"}}\\| $volume_icon $volume \\| |}$combo.str(max_w:25, rot_interval:0.1) \\| $prev $play $next |}"
seek_step_secs = 10
[[block.click]]
button = "left"
action = "play_pause"
[[block.click]]
button = "up"
action = "volume_up"
[[block.click]]
button = "down"
action = "volume_down"
[[block.click]]
button = "forward"
action = "seek_forward"
[[block.click]]
button = "back"
action = "seek_backward"
[block.theme_overrides]
info_bg = { link = "good_bg" }

{{ if eq .chezmoi.hostname "bmalyn-yoga" }}
[[block]]
block = "net"
device = "wlp2s0"
format = " $icon {$signal_strength} "
[[block.click]]
button = "left"
cmd = "alacritty -e nmtui"
{{ end }}

[[block]]
block = "temperature"
interval = 1
format = " $icon Temp: {$max}C "

[[block]]
block = "load"
interval = 1
format = " $icon Load: $1m "

[[block]]
block = "cpu"
interval = 1
format = " $icon Usage: $utilization "

[[block]]
block = "battery"
interval = 1
{{ if eq .chezmoi.hostname "bmalyn-tower" }}
driver = "apc_ups"
format = " $icon $percentage $time {$power|N/A} "
full_format = " $icon Full $time {$power|N/A} "
{{ else if eq .chezmoi.hostname "bmalyn-yoga" }}
device = "BAT1"
format = " $icon {$percentage} {$time} "
full_format = " $icon Full "
{{ end }}

[[block]]
block = "pacman"
format = " $icon $pacman + $aur = both updates available "
format_singular = " $icon $pacman + $aur = both updates available "
format_up_to_date = " $icon system up to date "
critical_updates_regex = "(linux|linux-lts|linux-zen)"
aur_command = "paru -Qua"

[[block]]
block = "weather"
format = " $icon $weather_verbose {$temp}C "
autolocate = true
[block.service]
name = "metno"

[[block]]
block = "time"
format = " $icon $timestamp.datetime(f:'%a %Y-%m-%d %R %Z') "

[[block]]
block = "backlight"

[[block]]
block = "hueshift"
click_temp = 4500

[[block]]
block = "notify"
format = " $icon {($notification_count.eng(w:1)) |}"
driver = "swaync"
[[block.click]]
button = "right"
action = "show"

[[block]]
block = "sound"
{{ if eq .chezmoi.hostname "bmalyn-tower" }}
step_width = 0
format = " $icon $output_name "
[[block.click]]
button = "left"
action = "toggle_mute"
[[block.click]]
button = "right"
cmd = "nextSink.awk"
[block.theme_overrides]
warning_bg = { link = "idle_bg" }
warning_fg = { link = "idle_fg" }
[block.mappings]
"alsa_output.pci-0000_41_00.1.hdmi-stereo" = "\uf390"
"alsa_output.pci-0000_41_00.1.hdmi-stereo-extra1" = "\uf390"
"alsa_output.pci-0000_41_00.1.hdmi-stereo-extra2" = "\uf390"
"alsa_output.pci-0000_41_00.1.3.hdmi-stereo" = "\uf390"
"alsa_output.pci-0000_41_00.1.3.hdmi-stereo-extra1" = "\uf390"
"alsa_output.pci-0000_41_00.1.3.hdmi-stereo-extra2" = "\uf390"
"alsa_output.usb-Focusrite_Scarlett_Solo_USB_Y7RRZHQ19D3BE3-00.iec958-stereo" = "\U000f02cb"
{{ else if eq .chezmoi.hostname "bmalyn-yoga" }}
device_kind = "sink"
name = "alsa_output.pci-0000_00_1f.3.pro-output-0"

